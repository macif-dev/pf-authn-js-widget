<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  <h1 class="heading">{{i18n 'new_password_recommended_title'}}</h1>
  <div class="text-block">
    <div class="text-block__text">{{i18n 'new_password_recommended_subtitle_1'}} {{daysToExpireMsg}}. {{i18n 'new_password_recommended_subtitle_2'}}</div>
  </div>
  <form class="form form--margin-small" id="AuthnWidgetForm">
    <div class="button-set">
      <button data-actionId="initiatePasswordChange" class="button">{{i18n 'new_password_recommended_btn_change_now'}}</button>
      <button data-actionId="continueAuthentication" class="button">{{i18n 'new_password_recommended_btn_change_later'}}</button>
    </div>
  </form>
</div>