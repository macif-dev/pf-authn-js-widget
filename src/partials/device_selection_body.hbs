{{#each devices as |device|}}
  {{#ifEq device.id ../selectedDeviceRef.id}}
    <span class="form-aside" id="deviceInfoBlockId">
      <p class="text-block text-block--small">
        <span class="text-block__text">{{../bodyText}}</span>
      </p>
      <p class="text-block">
      {{#ifEq device.type "Android"}}
        <span class="text-block__text">{{device.name}}</span>
      {{else ifEq device.type "iPhone"}}
        <span class="text-block__text">{{device.name}}</span>
      {{else ifEq device.type "PLATFORM"}}
          <span class="text-block__text">{{i18n 'device_selection_body_text_biometrics'}}</span>
      {{else ifEq device.type "SECURITY_KEY"}}
          <span class="text-block__text">{{i18n 'device_selection_body_text_key'}}</span>
      {{else ifEq device.type "TOTP"}}
        {{#if device.nickname}}
          <span class="text-block__text">{{device.nickname}}</span>
        {{else}}
          <span class="text-block__text">{{device.type}}</span>
        {{/if}}
      {{else}}
        <span class="text-block__text">{{device.type}}</span>
      {{/ifEq}}
      </p>
    </span>
  {{/ifEq}}
{{/each}}
