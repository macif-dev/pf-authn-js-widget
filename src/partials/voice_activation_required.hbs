<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo"/>
  </div>
  {{> errors}}
  <h1 class="heading-text centered-text icon-heading">
    <svg viewBox="0 0 24 24" role="presentation">
      <path d="M20,15.5C18.8,15.5 17.5,15.3 16.4,14.9C16.3,14.9 16.2,14.9 16.1,14.9C15.8,14.9 15.6,15 15.4,15.2L13.2,17.4C10.4,15.9 8,13.6 6.6,10.8L8.8,8.6C9.1,8.3 9.2,7.9 9,7.6C8.7,6.5 8.5,5.2 8.5,4C8.5,3.5 8,3 7.5,3H4C3.5,3 3,3.5 3,4C3,13.4 10.6,21 20,21C20.5,21 21,20.5 21,20V16.5C21,16 20.5,15.5 20,15.5M5,5H6.5C6.6,5.9 6.8,6.8 7,7.6L5.8,8.8C5.4,7.6 5.1,6.3 5,5M19,19C17.7,18.9 16.4,18.6 15.2,18.2L16.4,17C17.2,17.2 18.1,17.4 19,17.4V19Z"/>
    </svg><span class="inline-icon">{{i18n 'voice_activation_required_title'}}</span></h1>
  <div class="text-block">
    <div class="text-block--overflow-wrap">
      {{i18n 'voice_activation_required_subtitle'}}
    </div>
  </div>
  <div class="tile-selector tile-selector--stacked">
    <form class="form" id="AuthnWidgetForm">
      <div class="stack stack--small" data-id="stack">
        <div class="text-input__icon">
          <input id="otp" name="otp" type="text" class="text-input text-input--primary input--otp required"
                 maxlength="6" value=""/>
        </div>
      </div>
      <div class="form-aside">
        <div class="stack" data-id="stack">
          <div class="stack stack--small" data-id="stack">
            <div class="text-block" data-id="textblock">
              <div class="text-block--overflow-wrap">
                {{i18n 'voice_activation_required_calling'}}
              </div>
            </div>
            <div class="text-block" data-id="textblock">
              <div class="text-block--overflow-wrap">
                {{phone}}
              </div>
            </div>
          </div>
          <div class="stack stack--small" data-id="stack">
            <div>
              <button class="button file-input--button button--tertiary" data-id="button"
                      data-actionId="resendOtp" type="button">
                {{i18n 'voice_activation_required_call_again'}}
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="text-block" data-id="textblock">
        <div class="text-block--overflow-wrap">
          <div class="stack" data-id="stack">
            <div>
              <button id="submit" data-actionId="activateVoiceDevice" type="submit"
                      class="button button--primary brand-primary-bg">
                {{i18n 'btn_finish'}}
              </button>
            </div>
            <a tabindex="0" data-actionId="cancelDevicePairing" target="_self" class="anchor">{{i18n 'btn_cancel'}}</a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
