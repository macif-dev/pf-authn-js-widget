<form class="form form--margin-small" id="AuthnWidgetForm">
  <div class="float-label">
    <input type="text" class="text-input float-label__input required" name="identifier" />
    <label class="float-label__label" for="identifier">{{i18n 'identifier_signon_input_username_label'}}</label>
  </div>
  <div class="button-set">
    <button id="submit" type="submit" data-actionid="submitIdentifier" class="button button--primary brand-primary-bg"
      disabled>
      {{i18n 'btn_next'}}
    </button>
    <button data-actionId="cancelIdentifierSubmission" class="button">{{i18n 'btn_cancel'}}</button>
  </div>
</form>