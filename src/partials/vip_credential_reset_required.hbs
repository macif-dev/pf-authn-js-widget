<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo"/>
  </div>
  {{> errors}}
  <h1 class="heading">{{username}}</h1>
  <div class="text-block">
    <div class="text-block__text">{{i18n 'vip_credential_reset_required_text_reset'}}</div>
  </div>
  <div class="tile-selector tile-selector--stacked">
    <form class="form form--margin-small" id="AuthnWidgetForm">
      <div class="stack" data-id="stack">
        <div class="dropdown float-label dropdown--standard">
          <select id="vip-credentials" name="vipCredentialId" class="dropdown__select dropdown__select--info" required>
            {{#each resettableVipCredentials as |credential|}}
              {{#if credential.friendlyName}}
                <option value="{{credential.id}}">{{credential.friendlyName}}</option>
              {{else}}
                <option value="{{credential.id}}">{{credential.id}}</option>
              {{/if}}
            {{/each}}
          </select>
          <label class="float-label__label" for="vip-credentials">{{i18n 'vip_credential_reset_required_label_registered'}}</label>
        </div>
        <div class="float-label">
          <input id="securityCode" type="text" class="text-input float-label__input required" name="securityCode" required/>
          <label class="float-label__label" for="securityCode">{{i18n 'vip_credential_reset_required_label_first_code'}}</label>
        </div>
        <div class="float-label">
          <input id="nextSecurityCode" type="text" class="text-input float-label__input required" name="nextSecurityCode" required/>
          <label class="float-label__label" for="nextSecurityCode">{{i18n 'vip_credential_reset_required_label_second_code'}}</label>
        </div>

        <div class="text-block">
          <button id="submit" type="submit" class="button button--primary brand-primary-bg" data-id="button"
                  data-actionId="resetVIPCredential" disabled>{{i18n 'btn_submit'}}
          </button>
        </div>
        <div class="text-block">
          <a tabindex="0" data-actionId="cancel" target="_self" class="anchor">{{i18n 'btn_cancel'}}</a>
        </div>
      </div>
    </form>
  </div>
</div>