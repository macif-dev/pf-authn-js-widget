<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  {{> errors}}
  {{> spinner}}
  <div class="text-block">
    <div class="text-block--overflow-wrap">
      {{i18n 'oauth_device_user_code_confirmation_required_title'}}
    </div>
  </div>
  <form class="form" id="AuthnWidgetForm">
    <div class="float-label">
      <input type="text" class="text-input float-label__input required" id="userCode" data-st-field="userCode"
        name="userCode" placeholder="B3C4-D6F7" value="{{userCode}}" readonly />
      <label class="float-label__label" for="userCode">{{i18n 'oauth_device_user_code_confirmation_required_label_usercode'}}</label>
    </div>
    <button id="submit" data-actionid="confirmUserCode" type="submit" data-st-tag="userCode.userCode_confirm_attempt"
      class="button button--primary brand-primary-bg" disabled>
      {{i18n 'oauth_device_user_code_confirmation_required_btn_confirm'}}
    </button>
  </form>
</div>