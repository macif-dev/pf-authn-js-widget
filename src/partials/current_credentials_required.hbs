<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  <h1 class="heading">{{i18n 'current_credentials_required_title'}}</h1>
  <div class="text-block text-block--small">
    <div class="text-block__text">{{i18n 'current_credentials_required_text'}}</div>
  </div>
  {{> errors}}
  {{> spinner}}
  <form class="form form--spacing-lg" id="AuthnWidgetForm">
    {{#if showCaptcha}}
    <div class="g-recaptcha" data-sitekey="{{captchaSiteKey}}" data-callback="{{checkRecaptcha}}" data-size="invisible"
      id="invisibleRecaptchaId">
    </div>
    {{/if}}
    <div class="stack stack--small">
      <div class="float-label">
        <input type="text" class="text-input float-label__input required" name="username" placeholder="Username"
          value="{{username}}" />
        <label class="float-label__label" for="username13">{{i18n 'current_credentials_required_input_username'}}</label>
      </div>
      <div class="stack stack--small">
        <div class="float-label">
          <input type="password" class="text-input float-label__input required" name="password"
            placeholder="Current Password" />
          <label class="float-label__label" for="password">{{i18n 'current_credentials_required_input_pwd'}}</label>
        </div>
      </div>
    </div>
  </form>
  <div class="button-set">
    <button id="submit" type="submit" data-actionId="checkCurrentCredentials" class="button button--primary brand-primary-bg"
      disabled>{{i18n 'btn_submit'}}</button>
    <button data-actionId="cancelPasswordChange" class="button">{{i18n 'btn_cancel'}}</button>
  </div>
</div>