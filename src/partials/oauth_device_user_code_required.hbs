<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  {{> errors}}
  {{> spinner}}
  <div class="text-block">
    <div class="text-block--overflow-wrap">
      {{i18n 'oauth_device_user_code_required_text'}}
    </div>
  </div>
  <form class="form" id="AuthnWidgetForm">
    <div class="float-label">
      <input type="text" class="text-input float-label__input required" id="userCode" data-st-field="userCode"
        name="userCode" placeholder="B3C4-D6F7" />
      <label class="float-label__label" for="userCode">{{i18n 'oauth_device_user_code_required_label_code'}}</label>
    </div>
    <button id="submit" data-actionid="submitUserCode" type="submit" data-st-tag="userCode.userCode_attempt"
      class="button button--primary brand-primary-bg" disabled>
      {{i18n 'btn_submit'}}
    </button>
  </form>
</div>