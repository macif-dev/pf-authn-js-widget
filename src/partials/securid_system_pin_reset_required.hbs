<div class="card">
  <div class="org-logo">
    <img class="org-logo__image" src="{{logo}}" alt="Company Logo" />
  </div>
  {{> errors}}
  {{> spinner}}
  <form class="form" id="AuthnWidgetForm">
    <div class="text-block" data-id="textblock">
      <div class="text-block--overflow-wrap">
        {{> i18n 'securid_system_pin_reset_required_text_1'}}
      </div>
    </div>
    <div class="text-block" data-id="textblock">
      <div class="text-block--overflow-wrap">
        {{i18n 'securid_system_pin_reset_required_new_pin'}}<br/><strong>{0}</strong>
      </div>
    </div>
    <div class="text-block" data-id="textblock">
      <div class="text-block--overflow-wrap">
        {{> i18n 'securid_system_pin_reset_required_text_2'}}
      </div>
    </div>
    <button id="submit" data-actionid="continue" type="submit" class="button button--primary brand-primary-bg">
        {{i18n 'btn_submit'}}
    </button>
    <div class="text-block">
      <div class="text-block--overflow-wrap">
        <a tabindex="0" data-actionId="cancel" target="_self" class="anchor">{{i18n 'btn_cancel'}}</a>
      </div>
    </div>
  </form>
</div>