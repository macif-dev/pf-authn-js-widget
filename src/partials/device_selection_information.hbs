<div class="form-aside">
  <div class="stack" data-id="stack">
    {{#ifNotEq device.type "TOTP" }}
      {{#ifNotEq device.type "Android" }}
        {{#ifNotEq device.type "iPhone" }}
          <div class="stack stack--small" data-id="stack">
            <div class="text-block" data-id="textblock">
              <div class="text-block--overflow-wrap">
                {{#ifEq device.type "Voice" }}
                  {{i18n 'device_selection_information_text_voice'}}
                {{else ifEq device.type "SMS" }}
                  {{i18n 'device_selection_information_text_sms'}}
                {{else}}
                  {{device.type}} {{i18n 'device_selection_information_text_sent'}}
                {{/ifEq}}
              </div>
            </div>
            <div class="text-block" data-id="textblock">
              <div class="text-block--overflow-wrap">
                {{device.target}}
              </div>
            </div>
          </div>
          <div class="stack stack--small" data-id="stack">
            <div>
              <button class="button file-input--button button--tertiary" data-id="button"
                      type="button" data-mfa-selection="{{device.id}}">
                {{#ifEq device.type "Voice" }}
                  {{i18n 'device_selection_information_btn_call'}}
                {{else}}
                  {{i18n 'btn_resend'}}
                {{/ifEq}}
              </button>
            </div>
          </div>
        {{/ifNotEq}}
      {{/ifNotEq}}
    {{/ifNotEq}}
  </div>
</div>
